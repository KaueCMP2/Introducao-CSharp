@model SistemaJogosMVC.Models.Personagem

<h2>Cadastrar Personagem</h2>

<form asp-action="Criar">
    <label>Nome: </label>
    <input type="text" name="nomeConstrutor" class="form-control">

    <label>Nivel: </label>
    <input type="text" name="nivelConstrutor" class="form-control">

    <label>Poder: </label>
    <input type="text" name="poderConstrutor" class="form-control">

    <label>Tipo: </label>
    <input type="text" name="tipoConstrutor" class="form-control">

    <button type="submit" class="btn btn-success">Salvar</button>
</form>