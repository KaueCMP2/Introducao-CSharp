@model SistemaFuncionariosMVC.Models.Funcionario

<h2>Cadastrar Funcionario</h2>

<form esp-action="Criar">
    <label >Nome</label>
    <input type="text" name="nomeConstrutor" class="form-control">

    <label>SalarioBase</label>
    <input type="number" name="salarioBaseConstrutor" class="form-control" step="0.01"> @*controla a quantidade de casas decimais... nesse caso 2*@

    <label>Cargo</label>
    <select name="CargoConstrutor" id="">
        <option value="Gerente">Gerente</option>
        <option value="Vendedor">Vendedor</option>
    </select>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>